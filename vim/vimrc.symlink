syntax on

" Wrap gitcommit file types at the appropriate length
filetype indent plugin on

" set tabs size to 4 spaces, hitting tab will enter spaces
set nocompatible
colo torte
syntax on
set tabstop     =2
set softtabstop =2
set shiftwidth  =2
set expandtab

" show line numbers
set number

" make y(ank) into os clipboard
set clipboard^=unnamed,unnamedplus

